<com.jaay.beats.uiviews.Slate xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:aap="http://schemas.android.com/tools">

    <view class="com.jaay.beats.reels.AllPlaylists$Playlists"
        android:id="@+id/all_playlists"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="5dp"/>

    <com.jaay.beats.uiviews.Image
        android:id="@+id/add"

        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="100dp"
        android:padding="20dp"

        android:src="@drawable/add"

        app:shade="#FF38210A"
        app:radius="20dp"/>

    <view class="com.jaay.beats.reels.AllPlaylists$CreatePlaylist"

        android:id="@+id/create"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone" />

    <view class="com.jaay.beats.reels.AllPlaylists$AddSongs"
        android:id="@+id/add_songs"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone" />

    <view class="com.jaay.beats.reels.AllPlaylists$Playlists$PlaylistTracks"
        android:id="@+id/playlist_tracks"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone" />

</com.jaay.beats.uiviews.Slate>