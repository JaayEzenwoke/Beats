<com.jaay.beats.uiviews.Slate
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jaay.beats.uiviews.Edit
        android:id="@+id/search_bar"

        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_margin="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"

        android:background="@null"
        android:drawableLeft="@drawable/search"
        android:drawableTint="@color/beat_color"
        android:maxLines="1"
        android:hint="@string/search_in_library"
        android:inputType="textMultiLine"
        android:textColorHint="@color/beat_color"
        android:textColor="@color/beat_color"

        app:radius="10dp"
        app:stroke="1dp"
        app:stroke_shade="@color/beat_color"/>

    <view class="com.jaay.beats.reels.Search$SearchList"
        android:id="@+id/searchlist"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="64dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp" />

    <com.jaay.beats.uiviews.Image
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_gravity="center"
        android:layout_marginLeft="10dp"

        android:src="@drawable/not_found"
        android:backgroundTint="@color/beat_color"/>


</com.jaay.beats.uiviews.Slate>